        GridPane.rowIndex = "3"
        GridPane.columnIndex = "0"
        prefWidth="200"
        maxWidth="300"
        GridPane.hgrow="ALWAYS"
        prefHeight="300"
        text="5200"
        editable="false"
        wrapText="true"
